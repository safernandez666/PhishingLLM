    {
      "parameters": {
        "jsCode": "// Obtener los adjuntos del item actual (vienen en la propiedad 'binary')\nconst attachments = $input.all()[0].binary;\n\n// Crear un nuevo array de ítems, uno por cada adjunto\nconst items = [];\n\nfor (const key in attachments) {\n    if (attachments.hasOwnProperty(key)) {\n        items.push({\n            json: {},  // Si necesitas datos JSON adicionales, puedes agregarlos aquí.\n            binary: {\n                data: attachments[key],  // Mover el adjunto a la propiedad 'data'.\n            },\n        });\n    }\n}\n\nreturn items;\n"
      },
